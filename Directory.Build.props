<Project>

	<PropertyGroup Label="Base Project Properties">
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<PropertyGroup Label="Project Directory Properties">
		<SourceProjectRoot>$([MSBuild]::NormalizeDirectory('$(MSBuildThisFileDirectory)', 'src'))</SourceProjectRoot>
		<TestsProjectRoot>$([MSBuild]::NormalizeDirectory('$(MSBuildThisFileDirectory)', 'tests'))</TestsProjectRoot>
	</PropertyGroup>

</Project>
